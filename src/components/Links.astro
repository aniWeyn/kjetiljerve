---
interface Props {
  href: string;
  title: string;
}

const { href, title } = Astro.props;
---

<div class="link_wrapper">
  <a href={href} target="_blank">
    <div class="link">
      <span>{title}</span>
    </div>
  </a>
</div>

<style>
  .link {
    padding: 20px;
    border: 1px solid var(--font);
    max-width: 300px;
    display: flex;
    justify-content: center;
    border-width: thick;
    font-weight: 900;
    text-transform: lowercase;
    letter-spacing: 0.7px;
  }
  a {
    color: var(--font);

    text-decoration: none;
    max-width: 30px;
  }

  .link_wrapper {
    align-self: center;
    max-width: 300px;
    min-width: 150px;
  }

  .link_wrapper:hover {
    background-color: rgba(255, 255, 255, 0.143);
  }
</style>
